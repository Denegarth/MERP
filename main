def create_character():
    column_1 = [
        [sg.Text('Enter your character name: ', size=(30, 1))],
        [sg.Text('Select your Race/Culture: ', size=(30, 1))],
        [sg.Text('Select your profession: ', size=(30, 1))],
        [sg.Text("Enter your character's age: ", size=(30, 1))],
        [sg.Text("Enter your character's gender: ", size=(30, 1))],
        [sg.Text("Enter your character's height: ", size=(30, 1))],
        [sg.Text("Enter your character's weight: ", size=(30, 1))],
        [sg.Text("Enter your character's hair color: ", size=(30, 1))],
        [sg.Text("Enter your character's eye color: ", size=(30, 1))]

    ]

    column_2 = [
        [sg.InputText('', key='name_text', size=(26, 1))],
        [sg.Combo(
            ['Hobbit', 'Dwarf', 'Man', 'Dunedain', 'Half-Elf', 'Silvan Elf',
             'Sindar Elf', 'Noldor Elf', 'Wose',
             'Half-Orc', 'Orc', 'Uruk-Hai', 'Half-Troll', 'Troll', 'Olog-Hai'],
            enable_events=True, size=(25, 1),
            key='selected_race')],
        [sg.Combo(['Warrior', 'Scout', 'Ranger', 'Bard', 'Mage', 'Animist'],
                  enable_events=True,
                  key='selected_profession', size=(25, 1))],
        [sg.InputText('', key='age_text', size=(25, 1))],
        [sg.InputText('', key='sex_text', size=(25, 1))],
        [sg.InputText('', key='height_text', size=(25, 1))],
        [sg.InputText('', key='weight_text', size=(25, 1))],
        [sg.InputText('', key='hair_text', size=(25, 1))],
        [sg.InputText('', key='eyes_text', size=(25, 1))]
    ]
    create_character_layout = [
        [sg.Column(
            [[sg.Frame('', [[sg.Column(column_1, background_color='gray34'),
                             sg.Column(column_2,
                                       background_color='gray34')]])]],
            pad=(10, 10))],
        [sg.Button('Continue'), sg.Exit()]
    ]

    create_character_window = sg.Window('MERP Character Creation',
                                        create_character_layout)

    while True:
        create_character_event, create_character_values =\
            create_character_window.Read()
        if create_character_event is None or create_character_event == 'Exit':
            break

        if create_character_event == 'Continue':
            entered_name = create_character_values['name_text']
            entered_race = create_character_values['selected_race']
            entered_profession = create_character_values['selected_profession']
            entered_age = create_character_values['age_text']
            entered_sex = create_character_values['sex_text']
            entered_height = create_character_values['height_text']
            entered_weight = create_character_values['weight_text']
            entered_hair = create_character_values['hair_text']
            entered_eyes = create_character_values['eyes_text']
            if entered_race == 'Man':
                entered_culture = cf.man_race()
            else:
                entered_culture = ''
            window.Close()
            return entered_name, entered_race, entered_profession,\
                entered_age, entered_sex, entered_height, entered_weight,\
                entered_hair, entered_eyes, entered_culture

    window.Close()


if cf.PlayerCharacter(selected_profession=None):
    layout = [
        [sg.Text('MERP Character Sheet', font=("Helvetica", 10)),
         sg.Button('Load Character'), sg.Button('Create New Character')]]

    window = sg.Window('Character Creation', layout, resizable=True,
                       default_element_size=(40, 1),
                       grab_anywhere=False)

    while True:
        event, values = window.read()

        if event == 'Create New Character':
            info_list = create_character()
            cf.player_character.character_name = info_list[0]
            cf.player_character.selected_race = info_list[1]
            cf.player_character.selected_profession = info_list[2]
            cf.player_character.age = info_list[3]
            cf.player_character.sex = info_list[4]
            cf.player_character.height = info_list[5]
            cf.player_character.weight = info_list[6]
            cf.player_character.hair = info_list[7]
            cf.player_character.eyes = info_list[8]
            cf.player_character.selected_culture = info_list[9]
            cf.rolled_stats.extend(cf.roll_stats())
            assign_stats()
            for i in r.stats:
                cf.stat_bonus()
            for i in r.stats:
                cf.stat_racial_bonus()
            for i in r.skills:
                cf.adolescent_skills()
            for i in r.skills:
                cf.rank_bonus()
            for i in r.skills:
                cf.skill_stat_bonus()
            for i in r.skills:
                cf.prof_bonus()
            character_sheet()

        # Need to do this still save(values)
        elif event == 'Load Character':
            filename = sg.popup_get_file('Load Settings', no_window=True)
            window.LoadFromDisk(filename)
            # load(form)
        elif event in ('Exit', None):
            break

        window.close()

