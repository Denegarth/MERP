import reference as r
import character_functions as cf
import PySimpleGUIQt as sg



def assign_stats():
    stat1 = cf.rolled_stats[0]
    stat2 = cf.rolled_stats[1]
    stat3 = cf.rolled_stats[2]
    stat4 = cf.rolled_stats[3]
    stat5 = cf.rolled_stats[4]
    stat6 = cf.rolled_stats[5]
    stat7 = cf.rolled_stats[6]

    column_1 = [
        [sg.Text('Strength: ')],
        [sg.Text('Agility: ')],
        [sg.Text('Constitution: ')],
        [sg.Text('Intelligence: ')],
        [sg.Text('Intuition: ')],
        [sg.Text('Presence: ')],
        [sg.Text('Appearance: ')]
    ]

    column_2 = [
        [sg.Combo([stat1, stat2, stat3, stat4, stat5, stat6, stat7],
                  enable_events=True, key='stat1')],
        [sg.Combo([stat1, stat2, stat3, stat4, stat5, stat6, stat7],
                  enable_events=True, key='stat2')],
        [sg.Combo([stat1, stat2, stat3, stat4, stat5, stat6, stat7],
                  enable_events=True, key='stat3')],
        [sg.Combo([stat1, stat2, stat3, stat4, stat5, stat6, stat7],
                  enable_events=True, key='stat4')],
        [sg.Combo([stat1, stat2, stat3, stat4, stat5, stat6, stat7],
                  enable_events=True, key='stat5')],
        [sg.Combo([stat1, stat2, stat3, stat4, stat5, stat6, stat7],
                  enable_events=True, key='stat6')],
        [sg.Combo([stat1, stat2, stat3, stat4, stat5, stat6, stat7],
                  enable_events=True, key='stat7')]
    ]

    assign_stats_layout = [
        [sg.Text('You rolled: ')],
        [sg.Column(column_1), sg.Column(column_2)],
        [sg.Button('Continue'), sg.Exit()]
    ]

    assign_stats_window = sg.Window('MERP Character Creation',
                                    assign_stats_layout)

    while True:
        assign_stats_event, stat_choice = assign_stats_window.Read()
        if event is None or event == 'Exit':
            break

        if assign_stats_event == 'Continue':
            r.stats['Strength']['value'] = stat_choice['stat1']
            r.stats['Agility']['value'] = stat_choice['stat2']
            r.stats['Constitution']['value'] = stat_choice['stat3']
            r.stats['Intelligence']['value'] = stat_choice['stat4']
            r.stats['Intuition']['value'] = stat_choice['stat5']
            r.stats['Presence']['value'] = stat_choice['stat6']
            r.stats['Appearance']['value'] = stat_choice['stat7']
            window.Close()
            return

    window.Close()


